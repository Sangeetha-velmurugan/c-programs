#include<stdio.h>
#include<conio.h>
int digitroot(int n)
{
int i,rem,sum=0;
for(i=0;i<=n;i++)
{
rem=n%10;
n=n/10;
sum=sum+rem;
}
return sum;
}
void main()
{
int num,j;
printf("enter the number :");
scanf("%d",&num);
if(num>9)
{
digitroot(num);
}
j=digitroot(num);
if(j>9)
{
digitroot(j);
printf("digitroot is %d",digitroot(j));
}
else
{
printf("digitroot is %d",digitroot(num));
}
getch();
}
